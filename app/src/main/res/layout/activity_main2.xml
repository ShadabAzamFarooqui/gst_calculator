<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gstcalculation.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:gravity="center"
            android:text=""
            android:id="@+id/inputTextView"
            android:textSize="25sp"
            android:maxLength="25"
            android:textColor="@color/black"
            android:maxLines="1"
            android:paddingRight="10dp"
            android:textAlignment="textEnd"
            android:background="@android:color/transparent" />



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/gst_detail"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:id="@+id/cgst_text"
                        android:text="CGST [ 6% ]"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="60"
                        android:id="@+id/cgst"
                        android:textAlignment="textEnd"
                        android:layout_height="wrap_content"
                        android:gravity="end" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="SGST [ 6% ]"
                        android:id="@+id/sgst_text"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="60"
                        android:id="@+id/sgst"
                        android:textAlignment="textEnd"
                        android:layout_height="wrap_content"
                        android:gravity="end" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="GST [ 12% ]"
                        android:id="@+id/gst_text"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="120"
                        android:id="@+id/gst"
                        android:textAlignment="textEnd"
                        android:layout_height="wrap_content"
                        android:gravity="end" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="TOTAL [ 1000 + 120 ]"
                        android:id="@+id/total_text"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="1120"
                        android:id="@+id/total_with_gst"
                        android:textAlignment="textEnd"
                        android:layout_height="wrap_content"
                        android:gravity="end" />
                </LinearLayout>



            </LinearLayout>
        </ScrollView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".3"
            android:textAlignment="textEnd"
            android:text=""
            android:id="@+id/total_gst"
            android:paddingRight="10dp"
            android:textSize="@dimen/numberTextSize"
            android:layout_gravity="center"
            android:gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/history"
                    android:textSize="@dimen/otherInputTextSize"
                    android:textColor="@color/black"
                    android:background="@drawable/yellow"
                    android:text="HISTORY"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/gst_5"
                    android:textSize="@dimen/otherInputTextSize"
                    android:textColor="#000"
                    android:background="@drawable/black_border"
                    android:text="+5%"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/gst_12"
                    android:textSize="@dimen/otherInputTextSize"
                    android:textColor="#000"
                    android:background="@drawable/black_border"
                    android:text="+12%"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/gst_18"
                    android:textSize="@dimen/otherInputTextSize"
                    android:textColor="#000"
                    android:background="@drawable/black_border"
                    android:text="+18%"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/gst_28"
                    android:textSize="@dimen/otherInputTextSize"
                    android:textColor="#000"
                    android:background="@drawable/black_border"
                    android:text="+28"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/clear"
                    android:textSize="@dimen/numberTextSize"
                    android:textColor="#000"
                    android:background="@drawable/black_border"
                    android:text="C"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/gst_m5"
                    android:textSize="@dimen/otherInputTextSize"
                    android:textColor="#000"
                    android:background="@drawable/black_border"
                    android:text="-5%"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/gst_m12"
                    android:textSize="@dimen/otherInputTextSize"
                    android:textColor="#000"
                    android:background="@drawable/black_border"
                    android:text="-12%"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/gst_m18"
                    android:textSize="@dimen/otherInputTextSize"
                    android:textColor="#000"
                    android:background="@drawable/black_border"
                    android:text="-18%"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/gst_m28"
                    android:textSize="@dimen/otherInputTextSize"
                    android:textColor="#000"
                    android:background="@drawable/black_border"
                    android:text="-28%"/>



            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/seven"
                    android:textSize="@dimen/numberTextSize"
                    android:textColor="#000"
                    android:background="@drawable/black_border"
                    android:text="7"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/eight"
                    android:textSize="@dimen/numberTextSize"
                    android:textColor="#000"
                    android:background="@drawable/black_border"
                    android:text="8"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/nine"
                    android:textSize="@dimen/numberTextSize"
                    android:textColor="#000"
                    android:background="@drawable/black_border"
                    android:text="9"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/divide"
                    android:textStyle="bold"
                    android:textSize="@dimen/otherInputTextSize"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/black_border"
                    android:text="/"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/del"
                    android:textSize="@dimen/otherInputTextSize"
                    android:textColor="@color/yellow"
                    android:background="@drawable/primary"
                    android:text="DEL"/>



            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/four"
                    android:textSize="@dimen/numberTextSize"
                    android:textColor="#000"
                    android:background="@drawable/black_border"
                    android:text="4"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/five"
                    android:textSize="@dimen/numberTextSize"
                    android:textColor="#000"
                    android:background="@drawable/black_border"
                    android:text="5"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/six"
                    android:textSize="@dimen/numberTextSize"
                    android:textColor="#000"
                    android:background="@drawable/black_border"
                    android:text="6"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/multi"
                    android:textStyle="bold"
                    android:textSize="@dimen/otherInputTextSize"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/black_border"
                    android:text="*"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/plus"
                    android:textStyle="bold"
                    android:textSize="@dimen/otherInputTextSize"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/black_border"
                    android:text="+"/>



            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/one"
                    android:textSize="@dimen/numberTextSize"
                    android:textColor="#000"
                    android:background="@drawable/black_border"
                    android:text="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/two"
                    android:textSize="@dimen/numberTextSize"
                    android:textColor="#000"
                    android:background="@drawable/black_border"
                    android:text="2"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/three"
                    android:textSize="@dimen/numberTextSize"
                    android:textColor="#000"
                    android:background="@drawable/black_border"
                    android:text="3"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/mod"
                    android:textStyle="bold"
                    android:textSize="@dimen/otherInputTextSize"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/black_border"
                    android:text="%"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/minus"
                    android:textStyle="bold"
                    android:textSize="@dimen/otherInputTextSize"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/black_border"
                    android:text="-"/>



            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/zero"
                    android:textSize="@dimen/numberTextSize"
                    android:textColor="#000"
                    android:background="@drawable/black_border"
                    android:text="0"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/point"
                    android:textSize="@dimen/numberTextSize"
                    android:textColor="#000"
                    android:background="@drawable/black_border"
                    android:text="."/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/bracketOpen"
                    android:textSize="@dimen/numberTextSize"
                    android:visibility="visible"
                    android:textColor="#000"
                    android:background="@drawable/black_border"
                    android:text="("/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/bracketClose"
                    android:textSize="@dimen/numberTextSize"
                    android:textColor="#000"
                    android:background="@drawable/black_border"
                    android:text=")"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/equal"
                    android:textSize="@dimen/otherInputTextSize"
                    android:textColor="@color/yellow"
                    android:background="@drawable/primary"
                    android:text="="/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>
